<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaseratiTCC.View.Options.BarbeariaView"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Background>
        <RadialGradientBrush >
            <GradientStopCollection>
                <GradientStop Color="#0f9be8" Offset="0.0" />
                <GradientStop Color="#544ba0" Offset="1.0" />
            </GradientStopCollection>
        </RadialGradientBrush>
    </ContentPage.Background>


    <StackLayout Margin="20" Padding="20">
        <Label Text="Estabelecimentos" TextColor="White" FontSize="30" FontAttributes="None" HorizontalOptions="Center" Padding="0,50,0,0"/>


        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <Button Text="Ordenar" x:Name="txtOrdenar" BackgroundColor="White" FontAttributes="Bold" TextColor="Black" CornerRadius="30" WidthRequest="100" Padding="0,05,20,05" Margin="0,20,-30,23" />
            <Image Source="setabaixo.png" WidthRequest="20" HeightRequest="15" VerticalOptions="Center" />
        </StackLayout>
    </StackLayout>


</ContentPage>